<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/loading_layout_background_drawable"
    android:padding="24dp"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        app:lottie_rawRes="@raw/loading_animation_three_lines"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saving_code"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/betmrounded_light"
        android:textColor="@color/card_border"
        />

</LinearLayout>